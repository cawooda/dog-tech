<div class="container content box">
  <h2>New Post</h2>
  <form action="/api/posts/new" method="POST" enctype="multipart/form-data" data-user-id="{{user_id}}"
    id="new-post-form">
    <div class="field">
      <label class="label">Post Title</label>
      <div class="control">
        <input id="title-input" class="input is-info" type="text" />
      </div>
    </div>

    <div class="field">
      <label class="label">Content</label>
      <div class="control">
        <textarea id="content-input" class="textarea" rows="10" type="text"></textarea>
      </div>
    </div>
    <div class="field">
      <label class="label">Image</label>
      <div class="control">
        <input id="file-input" class="file" name="image" type="file"></textarea>
      </div>
    </div>

    <button id="new-post-btn" class="button is-primary">Submit</button>
</div>

</form>
</div>

<script src="/js/new-post.js"></script>